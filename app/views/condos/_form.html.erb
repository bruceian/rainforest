<%= form_for(@condo) do |f| %>

  <div class="field">
    <%= f.label :number_of_rooms %><br />
    <%= f.number_field :number_of_rooms %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :unit %><br />
    <%= f.number_field :unit %>
  </div>
  <div class="field">
    <%= f.label :den %><br />
    <%= f.check_box :den %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
